@model IEnumerable<IdentitySecuredApp.Models.Laptop>
    <h2>Digital Retailers</h2>
<p style="font-size:20px">Shop the best laptops here with great deals!</p>

    
    <div class="card-deck">
        @foreach (var item in Model)
        {


                    <div class="card m-3" style="min-width: 18rem; max-width:30.5%; ">
                        <div class="card-header" style="position: relative;">
                            <p style="font-size:20px">@item.Title</p>
                        </div>
                        <img class="card-img-top" src="@item.ImageUrl" alt="Laptop Image" height="300px" />
                        <div class="card-footer text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                        </div>
                    </div>}
    </div>
